{
    "manifest_version": 3,
    "name": "agent.ai",
    "description": "agent.ai browser extension",
    "version": "1.0.0",
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        }
    },
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "permissions": [
        "sidePanel",
        "storage",
        "identity",
        "cookies",
        "tabs",
        "activeTab",
        "contextMenus"
    ]
}